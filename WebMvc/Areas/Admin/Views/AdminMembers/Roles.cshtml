@model AdminListRolesViewModel

@{
    ViewBag.Title = "Quản lý chức vụ";
}


@Html.Partial("_MembersNavButtons")


<div class="panel">
    <div class="panel-heading">
        <h5>@ViewBag.Title</h5>
    </div>
    <div class="panel-content">
        <div id="container">
            <div class="tablescroll">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width:50px">Sửa</th>
                            <th>Tên chức vụ</th>
                            <th style="width:50px">Xóa</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var it in Model.ListRoles)
                        {
                        <tr>
                            <td>
                                <span>
                                    <a href="@Url.Action("EditRole", new { id = it.Id })" class="btn-mvc">
                                        <span class="glyphicon glyphicon-pencil"></span>
                                    </a>
                                </span>
                            </td>
                            <td>@it.RoleName</td>
                            <td>
                                @if (!it.Lock)
                                {
                                    <a href="@Url.Action("DeleteRole", new { id = it.Id })" class="btn-mvc">
                                        <span class="glyphicon glyphicon-remove"></span>
                                    </a>
                                }
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            @Html.Partial("_Paging",Model.Paging)
        </div>
    </div>
</div>

