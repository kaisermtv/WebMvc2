@model  List<AdminEditUserRoleViewModel>
    <div class="form-group">
        <table class="table table-bordered table-striped">
            <tr>
                <th style="width:30px">Chọn</th>
                <th>Tên chức vụ</th>
            </tr>
            @if (Model != null)
            {
                for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>
                            <input type="hidden" name="Roles[@i].RoleId" value="@Model[i].RoleId" id="Roles_@(i)_RoleId" />
                            <input type="hidden" name="Roles[@i].RoleName" value="@Model[i].RoleName" id="Roles_@(i)_RoleName" />
                            <input type="checkbox" value="true" name="Roles[@i].Check" id="Roles_@(i)_Check" @Html.Raw(Model[i].Check ? "checked=\"checked\"" : "") />
                        </td>
                        <td>@Model[i].RoleName</td>
                    </tr>
                }
            }
        </table>
    </div>
