@model AdminTypeRoomEditViewModel

@{
    ViewBag.Title = "Create Type Room";
}

@Html.Partial("_BookingNavButtons")

<div class="panel">
    <div class="panel-heading">
        <h5>@ViewBag.Title</h5>
    </div>
    <div class="panel-content">
        @using (Html.BeginForm())
        {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.Partial("_FieldsCreateEditTypeRoom", Model)

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn-mvc-green btn-mvc-large" />
                        </div>
                    </div>
                </div>
        }
    </div>
</div>
