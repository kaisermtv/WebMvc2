@model  Category
@{
    ModulConfig.AdminMenuItem[] _Menu;
    if (Model.IsProduct)
    {
        ViewBag.Title = "Xóa nhóm sản phẩm";
        _Menu = ModulConfig.ProductManage;
    }
    else
    {
        ViewBag.Title = "Xóa nhóm bài viết";
        _Menu = ModulConfig.NewsManage;
    }
}
@Html.Partial("_TopMenu", _Menu)
<div class="panel">
    <div class="panel-heading">
        <h5>@ViewBag.Title</h5>
    </div>
    <div class="panel-content">
        <h2>Không thể xóa!</h2>
        <p>Bạn cần xóa hoặc di chuyển các mục con, bài viết, sản phẩm của danh mục này trước khi xóa.</p>
        <div class="form-group">
            <input type="text" class="form-control" readonly="readonly" value="@Model.Name" />
        </div>
        <a href="@Url.Action(Model.IsProduct?"Product":"News")" class="btn-mvc btn-mvc-large">Trờ lại</a>
    </div>
</div>
