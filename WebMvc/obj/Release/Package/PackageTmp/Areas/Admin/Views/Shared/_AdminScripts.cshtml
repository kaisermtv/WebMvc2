<script>
    function popupSelectCategory(id, titlle) {
        POPUPSELECT.SelectInputId = id;
        POPUPSELECT.SelectInputName = titlle;
        POPUPSELECT.GetNews();
        $("#PopupSelect").modal();
    }

    function popupSelectNews(id, titlle) {
        POPUPSELECT.SelectInputId = id;
        POPUPSELECT.SelectInputName = titlle;
        POPUPSELECT.GetNews();
        $("#PopupSelect").modal();
    }
    
    function popupSelectProduct(id, titlle) {
        POPUPSELECT.SelectInputId = id;
        POPUPSELECT.SelectInputName = titlle;
        POPUPSELECT.GetProduct();
        $("#PopupSelect").modal();
    }

    function popupSelectGroupProduct(id, titlle) {
        POPUPSELECT.SelectInputId = id;
        POPUPSELECT.SelectInputName = titlle;
        POPUPSELECT.GetGroupProduct();
        $("#PopupSelect").modal();
    }

    function ButtonInjectChooseImage(id, img) {
        var url = "/FileManager?integration=buttoninject&output=" + encodeURI(id);
        if (img && img != "") {
            url += "&imgshow=" + encodeURI(img);
        }

        window.open(url, "MsgWindow", "width=830,height=600");
    }

    function ButtonInjectChooseImageCallback(callbackname) {
        var url = "/FileManager?integration=buttoninject&callback=" + callbackname;
        
        window.open(url, "MsgWindow", "width=830,height=600");
    }

</script>
<!-- Modal -->
<div class="modal fade" id="PopupSelect" role="dialog">
    <div class="modal-dialog" style="width:90%">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 style="color:red;" id="PopupSelectTitle"></h4>
            </div>
            <div class="modal-body" id="PopupSelectData">
            </div>
        </div>
    </div>
</div>
