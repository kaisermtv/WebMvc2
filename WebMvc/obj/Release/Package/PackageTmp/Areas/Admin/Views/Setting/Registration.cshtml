@model AdminRegistrationSettingViewModel

@{
    ViewBag.Title = "Cài đặt đăng ký";
}

@using (Html.BeginForm("Registration", "Setting", FormMethod.Post))
{
    @Html.ValidationSummary(false)
    @Html.AntiForgeryToken()
    
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">@ViewBag.Title</h4>
        </div>
        <div class="panel-collapse">
            <div class="panel-body">
                <div class="form-group">
                    @Html.CheckBoxFor(model => model.LockRegister)
                    @Html.LabelFor(model => model.LockRegister)
                    @Html.ValidationMessageFor(model => model.LockRegister)
                </div>
            </div>
        </div>
    </div>

    <div class="submit-holder">
        <button type="submit" class="btn-mvc-green btn-mvc-large">Lưu cài đặt</button>
    </div>
}
