<div class="form-group">
    <table class="table table-bordered table-striped">
        <tr>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
        </tr>
        @foreach (var it in Model.products)
        {
            var pr = AppHelpers.GetProduct(it.ProductId);
            string name = "";
            string link = "";
            if (pr != null)
            {
                name = pr.Name;
                link = AppHelpers.ProductUrls(pr.Category_Id, pr.Slug);
            }
            <tr>
                <td><a href="@link">@name</a></td>
                <td>@it.Price</td>
            </tr>
        }
    </table>
</div>

<div class="form-group">
    <label>Trạng thái</label>
    <select id="Status" name="Status" class="form-control">
        <option value="0" @Html.Raw(Model.Status == 0?"selected=\"selected\"":"")>Chờ duyệt</option>
        <option value="1" @Html.Raw(Model.Status == 1?"selected=\"selected\"":"")>Liên lạc khách hàng</option>
        <option value="2" @Html.Raw(Model.Status == 2?"selected=\"selected\"":"")>Đang giao hàng</option>
        <option value="3" @Html.Raw(Model.Status == 3?"selected=\"selected\"":"")>Hoàn thành giao dịch</option>
        <option value="4" @Html.Raw(Model.Status == 4?"selected=\"selected\"":"")>Hủy bỏ giao dịch</option>
    </select>
</div>
