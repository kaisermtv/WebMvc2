@model  AdminMenuEditViewModel

@{
    ViewBag.Title = "Sửa menu";
}

@Html.Partial("_MenuNavButtons")

<div class="panel">
    <div class="panel-heading">
        <h5>@ViewBag.Title</h5>
    </div>
    <div class="panel-content">
        @using (Html.BeginForm("Edit", "AdminMenu", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(false)
            @Html.HiddenFor(model => model.Id)

            @Html.Partial("_MenuFields", Model)

            <div class="submit-holder">
                <input type="submit" class="btn-mvc-green btn-mvc-large" value="Cập nhật" />
                <a href="@Url.Action("Del", new { id = Model.Id })" class="btn-mvc btn-mvc-large" role="button">Xóa Menu</a>
            </div>
        }

    </div>
</div>

