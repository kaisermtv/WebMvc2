@model  AdminCreateEditTopicViewModel

@{
    ViewBag.Title = "Edit topic";
}

@Html.Partial("_TopicNavButtons")

<div class="panel">
    <div class="panel-heading">
        <h5>Edit Topic</h5>
    </div>
    <div class="panel-content">
        <div id="container">
            @using (Html.BeginForm("Edit", "AdminTopic", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                @Html.HiddenFor(x => x.Id)

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.Partial("_FieldsCreateEditTopic", Model)

                <div class="submit-holder">
                    <input type="submit" class="btn-mvc-green btn-mvc-large" value="Cập nhật" />
                </div>
            }
        </div>
    </div>
</div>
