<div class="widget-box">
    <div class="widget-title"><h4>Product</h4></div>
    <div class="widget-content">
        @foreach (var it in AppHelpers.Products(3))
        {
            var cat = it.GetCatergory();
            <div class="media footer-pr-widget-v1">
                <div class="media-left">
                    <a class="media-img" href="@it.GetLink()">
                        <img class="media-object" src="@it.Image()" alt="@it.Name">
                    </a>
                </div>
                <div class="media-body">
                    <span class="price">
                        @it.Attribute("Price").Value
                    </span>
                    <h4 class="media-heading">
                        <a href="@it.GetLink()">@it.Name</a>
                    </h4>
                    @if (cat != null)
                    {
                        <span class="category">
                            Category:
                            <a href="@cat.GetLink()">@cat.Name</a>
                        </span>
                    }
                </div>
            </div>
        }
    </div>
</div>