<div class="box_left">
    <div class="title_box_left">Tin xem nhiều nhất</div>
    <div class="content_box_left list_hot_news">
        <div class="bg_gradient_bottom_title"></div>
        <ul class="ul">
            @foreach (var it in AppHelpers.HostViewTopics(5))
            {
                <li>
                    <a href="@AppHelpers.TopicUrls(it.Category_Id,it.Slug)">
                        <img src="@AppHelpers.ImageCropUrl(it.Image, 75)" alt="@it.Name" width="75">
                        <span>@it.Name</span>
                    </a>
                </li>
            }
        </ul>
    </div>
</div><!--box_left-->