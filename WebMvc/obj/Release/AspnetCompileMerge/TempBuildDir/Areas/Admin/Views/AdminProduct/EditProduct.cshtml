@model  AdminEditProductViewModel

@{
    ViewBag.Title = "Chỉnh sửa thông tin sản phẩm";
}

@Html.Partial("_ProductNavButtons")

<div class="panel">
    <div class="panel-heading">
        <h5>@ViewBag.Title</h5>
        <a class="btn btn-mvc-green" href="@Url.Action("Product",new { id = Model.ProductClass })" style="float:right;">Danh sách sản phẩm</a>
    </div>
    <div class="panel-content">
        @using (Html.BeginForm("EditProduct", "AdminProduct", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(model => model.Id)

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.Partial("_FieldsCreateEditProduct", Model)

            <div class="submit-holder">
                <input type="submit" class="btn-mvc-green btn-mvc-large" value="Cập nhật" />
            </div>
        }

    </div>
</div>

