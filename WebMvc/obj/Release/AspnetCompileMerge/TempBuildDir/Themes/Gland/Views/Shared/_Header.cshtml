<script>
    function check_form_contact() {
        var error = "";
        var check_name = document.getElementById('contact_namef').value;
        var check_email = document.getElementById('contact_emailf').value;
        var check_tel = document.getElementById('contact_telf').value;
        var check_message = document.getElementById('contact_messagef').value;

        if (check_name.length < 4) error += "- Bạn chưa nhập tên\n";
        if (check_email.length < 4) error += "- Bạn chưa nhập email\n";
        if (check_tel.length < 4) error += "- Bạn chưa nhập số điện thoại\n";
        if (check_message.length < 4) error += "- Bạn chưa nhập nội dung\n";

        if (error == "") {
            var obj = new Object();
            obj.Name = check_name;
            obj.Phone = check_tel;
            obj.Email = check_email;
            obj.Content = check_message;

            // Ajax call to post the view model to the controller
            var strung = JSON.stringify(obj);

            $.ajax({
                url: '/Contact/Ajax',
                type: 'POST',
                data: strung,
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    console.log(data);
                    alert("Bạn gửi liên hệ thành công");
                    closePopup();
                    return true;
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    alert(thrownError)
                }
            });
        }
        else alert(error);
        return false;

    }
</script>


