<div class="widget-box">
    <div class="widget-title"><h4>Blog Recent Posts</h4></div>
    <div class="widget-content">
        @foreach (var it in AppHelpers.TopTopics(3))
        {
            <div class="media footer-pr-widget-v2">
                <div class="media-left">
                    <a class="media-img" href="@it.GetLink()">
                        <img class="media-object img-rounded" src="@it.Image()" alt="blog post">
                    </a>
                </div>
                <div class="media-body">
                    <span><i class="fa fa-clock-o"></i>@it.CreateDate.ToShortDateString()</span>
                    <h5 class="media-heading">
                        <a href="@it.GetLink()">@it.Name</a>
                    </h5>
                </div>
            </div>
        }
    </div>
</div>