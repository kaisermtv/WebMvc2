@model  TopicListViewModel

@{
    ViewBag.Title = "Tạp chí";
}

    <section class="inner-page-content border-bottom">
        <div class="container">
            <!-- breadcrumb -->
            <div class="row">
                <div class="col-lg-12">
                    <ul class="breadcrumb">
                        <li>
                            <a rel="v:url" property="v:title" href="@Url.Action("Index","Home")">
                                <i class="fa fa-home"></i>
                            </a>
                        </li>&nbsp;
                        <li class="active">Blogs</li>
                    </ul>
                </div>
            </div>		<!-- breadcrumb -->
            <div class="row top-pad-50">
                <div class="col-md-8 col-lg-9">
                    @foreach (var it in Model.ListTopic)
                    {
                        <article class="blog article-content">
                            <h3><a href="@it.GetLink()">@it.Name</a></h3>
                            <p>
                                <span><i class="fa fa-user"></i>@(it.GetUser()?.UserName)</span>
                                <span><i class="fa fa-clock-o"></i>@it.CreateDate.ToShortDateString()</span>
                                <span><i class="fa fa-comments"></i>No Comments</span>
                            </p>
                            <div class="blog-img">
                                <img class="thumbnail" src="@it.Image()" alt="@it.Name">
                            </div>
                            <p>@it.ShotContent</p>
                            <a href="@it.GetLink()" class="btn btn-primary btn-md sharp btn-style-one">
                                <i class="icon-left fa fa-arrow-circle-right"></i>Read More
                            </a>
                        </article>
                    }
                </div><!--col-md-8 col-lg-9-->
                <div class="col-md-4 col-lg-3">
                    @*@Html.Partial("_Sidebar")*@
                    <aside class="sidebar">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-6 match-height">
                                @Html.Partial("_WidgetProduct")
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-6 match-height">
                                @Html.Partial("_WidgetTopic")
                            </div>
                        </div>
                    </aside>
                </div>
            </div><!--row top-pad-50-->
        </div><!--container-->
    </section>
    