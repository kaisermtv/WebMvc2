@model  CartViewModel
@{
    ViewBag.Title = "Đặt hàng";
}
@Html.Partial("_Header1", "GIỎ HÀNG")
<div class="mainbody">
    <div class="bgblack mglra10 row wcontentbody">
        <div class="listnews">
            <div class="_w-container w-container">
                <div class="w-row">
                    <div class="pd0 w-col w-col-9 backtt content-left">
                        @using (Html.BeginForm("Commit", "Cart", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="tablecart matbb20">
                                <div class="row order">
                                    <form>
                                        <div id="no-more-tables" class="col-xs-12 giohang">
                                            <table class="col-md-12 table-order table-bordered table-striped table-condensed cf">
                                                <thead class="cf">
                                                    <tr>
                                                        <th>STT</th>
                                                        <th>Ảnh sản phẩm</th>
                                                        <th>Số lượng</th>
                                                        <th>Thành tiền</th>
                                                        <th>Xóa</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @{ int i = 0;}
                                                    @foreach (var it in Model.Products)
                                                    {
                                                        <tr>
                                                            <td>@(++i)</td>
                                                            <td>
                                                                <img src="@it.TopImg" />
                                                                <a href="@it.link"><b>@it.name</b></a>
                                                            </td>
                                                            <td>
                                                                <input type="hidden" name="Products[@(i-1)].Count" value="@it.Count">
                                                                <input type="hidden" name="Products[@(i-1)].Id" value="@it.Id">
                                                                @it.Count
                                                            </td>
                                                            <td><strong class="red">@it.Price</strong></td>
                                                            <td></td>
                                                        </tr>
                                                    }
                                                    <tr>
                                                        <td colspan="6">
                                                            <p class="tongtiencart">Tổng tiền: <span> @Model.TotalMoney.ToString("N0").Replace(",", ".") VNĐ </span></p>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                        <div class="col-xs-12 nut_gh mattcat">
                                            <a class="butt" href="@Url.Action("Commit","Cart")" title="Cập nhật giỏ hàng">Cập nhật giỏ hàng</a>
                                            <a class="butt" href="Vindex/delAllCart" title="Xóa giỏ hàng">Xóa giỏ hàng</a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="tablecart">
                                <div>
                                    <h3 class="heading-23">THÔNG TIN KHÁCH HÀNG</h3>
                                </div>
                                <div class="row m10">
                                    <div class="col-xs-12 form_kh p10">
                                        <div class="form-horizontal">
                                            <div class="form-group matbb15">
                                                <label class="col-sm-2 control-label">Họ tên ( hoặc tên công ty)</label>
                                                <div class="col-sm-10">
                                                    <input type="text" name="Name" required="required" class="form-control">
                                                </div>
                                            </div>
                                            <div class="form-group matbb15">
                                                <label class="col-sm-2 control-label">Địa chỉ</label>
                                                <div class="col-sm-10">
                                                    <input type="text" name="Addren" required="required" class="form-control">
                                                </div>
                                            </div>
                                            <div class="form-group matbb15">
                                                <label class="col-sm-2 control-label">Số điện thoại</label>
                                                <div class="col-sm-10">
                                                    <input type="text" name="Phone" required="required" class="form-control">
                                                </div>
                                            </div>
                                            <div class="form-group matbb15">
                                                <label class="col-sm-2 control-label">Email</label>
                                                <div class="col-sm-10">
                                                    <input type="email" name="Email" required="required" class="form-control">
                                                </div>
                                            </div>
                                            <div class="form-group matbb15">
                                                <label class="col-sm-2 control-label">Nội dung</label>
                                                <div class="col-sm-10">
                                                    <input type="text" name="Ship_Note" required="required" class="form-control">
                                                </div>
                                            </div>
                                            <div class="form-group matbb15">
                                                <div class="col-sm-offset-2 col-sm-10 sub sub1">
                                                    <button class="butt" disabled type="submit" class="btn btn-default">Gửi đơn hàng</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="column pd0 w-col w-col-3">
                        @Html.Partial("_Sidebar")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>