            <div class="row top-pad-50">
                <div class="col-md-8 col-lg-9">
                    <article class="blog article-content blog-post">
                        <div class="single-post border-bottom">
                            <h3><a href="@Model.topic.GetLink()">@Model.topic.Name</a></h3>
                            <p>
                                <span><i class="fa fa-user"></i>@(Model.topic.GetUser()?.UserName)</span>
                                <span><i class="fa fa-clock-o"></i>@Model.topic.CreateDate.ToShortDateString()</span>
                                <span><i class="fa fa-comments"></i>No Comments</span>
                            </p>
                            <div class="blog-img">
                                <img class="thumbnail" src="@Model.topic.Image()" alt="@Model.topic.Name">
                            </div>
                            <div id="lipsum">
                                @Html.Raw(Model.post.PostContent)
                            </div>
