@model CreateEditEmployeesViewModel

@{
    ViewBag.Title = "Thêm nhân viên";
}

@Html.Partial("_EmployeesNavButtons")

<div class="panel">
    <div class="panel-heading">
        <h5>@ViewBag.Title</h5>
    </div>
    <div class="panel-content">
        <div id="container">
            @using (Html.BeginForm("Create", "AdminEmployees", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.Partial("_EmployeesFields", Model)

                <div class="submit-holder">
                    <input type="submit" class="btn-mvc-green btn-mvc-large" value="Thêm" />
                </div>
            </div>
            }
        </div>
    </div>
</div>
