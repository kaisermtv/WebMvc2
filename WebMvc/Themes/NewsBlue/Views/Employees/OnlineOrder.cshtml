@model  EmployeesViewModel
        <style>
            #contact {
                color: #116eab;
            }
        </style>
<div id="contact" class="widget widget_text">
    <h3 class="widget-title">LIÊN HỆ</h3>
    <div class="textwidget">

        @foreach (var it in Model.employees)
        {
            <table style="width:100%;margin-bottom:8px">
                <tr>
                    <td>Họ tên: </td>
                    <td><b>@it.Name</b></td>
                </tr>
                <tr>
                    <td>Chức vụ: </td>
                    <td>@GetRoleName(it.RoleId)</td>
                </tr>
                <tr>
                    <td>Điện thoại: </td>
                    <td><b>@it.Phone</b></td>
                </tr>
            </table>
        }

        <p>Lượt xem trong ngày: @AppHelpers.ViewDay()</p>
        <p>Tổng Lượt xem: @AppHelpers.NumView()</p>
    </div>
</div>
@helper GetRoleName(Guid role)
{
    foreach (var item in Model.employeesRoles)
    {
        if (item.Id == role)
        {
            <b>@item.Name</b>
            break;
        }

    }
}