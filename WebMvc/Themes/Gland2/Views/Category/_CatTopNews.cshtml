@model  Category
@{
    var list = AppHelpers.TopTopics(Model, 5);
}
@if (list.Count > 0)
{
    var it = list[0];
    <div class="clear space2"></div>
    <div class="title_box_center">
        <h2 class="h_title cufon" style="font-size:22px !important;">@Model.Name</h2>
        <a href="@Url.Action("ShowBySlug","Category",new { slug = Model.Slug })" class="view_cate_news">Xem tất cả <span>»</span></a>
    </div>
    <div class="space2"></div>
    <div class="top_news_on_page">
        <div class="first">
            <a href="@AppHelpers.TopicUrls(Model.Slug,it.Slug)">
                <img src="@AppHelpers.ImageCropUrl(it.Image, 240)" alt="@it.Name">
            </a>
            <span class="container">
                <a href="@AppHelpers.TopicUrls(Model.Slug,it.Slug)" class="name">@it.Name</a>
                <span class="view">@it.CreateDate.ToString("dd-MM-yyyy, hh:mm tt") - Lượt xem: @it.Views</span>
                <span class="summary"></span>
            </span>
        </div>

        <ul class="ul">
            @for (int i = 1; i < list.Count; i++)
            {
                var item = list[i];
                <li>
                    <a href="@AppHelpers.TopicUrls(Model.Slug,item.Slug)"><img src="@AppHelpers.ImageCropUrl(item.Image, 100)" alt="@item.Name" width="100"></a>
                    <div style="width:270px; float:right;">
                        <a href="@AppHelpers.TopicUrls(Model.Slug,item.Slug)" class="name">@item.Name</a>
                        <span class="view">@item.CreateDate.ToString("dd-MM-yyyy hh:mm tt") - Lượt xem: @item.Views</span>
                    </div>
                </li>
            }
        </ul>
    </div><!--top-->
}